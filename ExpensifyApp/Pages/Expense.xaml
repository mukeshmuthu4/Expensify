<?xml version="1.0" encoding="utf-8" ?><ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="ExpensifyApp.Pages.Expense"             BackgroundColor="Transparent"             IsVisible="False">    <Grid>        <!-- Background Overlay -->        <BoxView BackgroundColor="Black" Opacity="0.5"/>        <!-- Popup Content -->        <Frame Padding="20" BackgroundColor="White" CornerRadius="20" WidthRequest="300" HeightRequest="400"               HorizontalOptions="Center" VerticalOptions="Center">            <Grid>                <!-- Background Image -->                <Image Source="background_image.png" Aspect="AspectFill" Opacity="0.3"/>                <!-- Popup Layout -->                <VerticalStackLayout Padding="20">                    <Label Text="Add Expense" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center"/>                    <Entry x:Name="categoryEntry" Placeholder="Category" IsReadOnly="True"/>                    <Entry x:Name="SubCategoryEntry" Placeholder="Sub-Category"/>                    <Entry x:Name="ExpenseEntry" Placeholder="Expense Amount" Keyboard="Numeric"/>                    <Picker x:Name="PayModePicker" Title="Select Pay Mode">                        <Picker.Items>                            <x:String>Cash</x:String>                            <x:String>Credit Card</x:String>                            <x:String>UPI</x:String>                        </Picker.Items>                    </Picker>                    <Button Text="Save" BackgroundColor="Green" TextColor="White" x:Name="saveButton" Clicked="saveButton_Clicked"/>                    <Button Text="Close" BackgroundColor="Red" TextColor="White" Clicked="ClosePopup"/>                </VerticalStackLayout>            </Grid>        </Frame>    </Grid></ContentView>